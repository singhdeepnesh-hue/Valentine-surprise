<button id="ignore" style="display:none;">Ignore üòú</button>

<script>
const noBtn=document.getElementById("no");
const yesBtn=document.getElementById("yes");

const screen1=document.getElementById("screen1");
const screen2=document.getElementById("screen2");

const openBtn=document.getElementById("open");
const ignoreBtn=document.getElementById("ignore");
const heartMsg=document.getElementById("heartMsg");

let lastX=0,lastY=0;

function moveFar(btn){
    const w=window.innerWidth-120;
    const h=window.innerHeight-60;
    let x,y,d;
    do{
        x=Math.random()*w;
        y=Math.random()*h;
        d=Math.hypot(x-lastX,y-lastY);
    }while(d<220);
    lastX=x; lastY=y;
    btn.style.left=x+"px";
    btn.style.top=y+"px";
}

noBtn.onmouseover=noBtn.onclick=()=>moveFar(noBtn);
ignoreBtn.onmouseover=ignoreBtn.onclick=()=>moveFar(ignoreBtn);

yesBtn.onclick=()=>{
    screen1.style.display="none";
    yesBtn.style.display="none";
    noBtn.style.display="none";

    screen2.style.display="block";
    openBtn.style.display="block";
    ignoreBtn.style.display="block";
};

openBtn.onclick=()=>{
    openBtn.style.display="none";
    ignoreBtn.style.display="none";
    heartMsg.style.display="block";
};

/* HEART RAIN GENERATOR */
function createHeart(){
    const heart=document.createElement("div");
    heart.className="heartRain";
    heart.innerHTML="‚ù§Ô∏è";
    heart.style.left=Math.random()*100+"vw";
    heart.style.animationDuration=(2+Math.random()*3)+"s";
    heart.style.fontSize=(16+Math.random()*20)+"px";
    document.body.appendChild(heart);

    setTimeout(()=>heart.remove(),5000);
}

setInterval(createHeart,200);
</script>

